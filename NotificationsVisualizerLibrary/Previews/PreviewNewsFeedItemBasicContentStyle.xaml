<UserControl
    x:Class="NotificationsVisualizerLibrary.Renderers.PreviewNewsFeedItemBasicContentStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotificationsVisualizerLibrary.Renderers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="54"/> <!--The bottom branding content section-->
        </Grid.RowDefinitions>

        <Border
            x:Name="AdaptiveContentContainer"
            Margin="6,6,6,0"/>

    </Grid>
</UserControl>
